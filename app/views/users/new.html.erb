<h1>Hi, create an account to get started</h1>
<p style="color:red;"><%= @user.errors.full_messages.first if @user.errors.any? %></p>
<%= form_for @user do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br><br>
  <%= f.label :email %><br>
  <%= f.text_field :email %><br><br>
  <%= f.label :password %><br>
  <%= f.password_field :password %><br><br>
  <%= f.submit "Create Account" %>

<%end%>
<br><br>
