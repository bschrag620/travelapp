<%= form_for [@trip, @destination] do |f| %>


  <%= f.text_field :country %><br><br>


    <%= f.fields_for :trip_destinations, @trip.trip_destinations.build do |trip_destinations_attr| %>
      <%= trip_destinations_attr.hidden_field :trip_id, :value => @trip.id %>
        <%= trip_destinations_attr.label :flight_cost %><br>
        <%= trip_destinations_attr.text_field :cost %><br><br>

    <% end %>

  <%= f.submit "Create Destination" %>

<%end%>
