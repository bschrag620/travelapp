<h1> <%=@user.name%>, Here is your new destination:<br>
   <%= @destination.country.capitalize %> <%= @destination.state.capitalize %> </h1>
<%= link_to '<button type="button">Edit destination</button>'.html_safe, edit_trip_destination_path %>
<%= form_tag activity_path(@destination.id), method: "delete" do %>
  <%= submit_tag "Delete #{@destination.country}" %>
  <%end%>

  <%= form_for @activity do |f| %>
    Activity:
    <ul>
      <%= f.fields_for :activity do |activity_form| %>
        <li>
          <%= activity_form.label :name %>
          <%= activity_form.text_field :name %>

        </li>
      <% end %>
    </ul>
  <% end %>

  <%= link_to '<button type="button">Add Activities</button>'.html_safe, new_activity_path(:trip_id => @trip_id, :destination_id => @destination_id) %>
